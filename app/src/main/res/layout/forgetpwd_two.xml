<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:id="@+id/findpwd_two">
    <TextView
        android:id="@+id/tvtv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找回密码"
        android:textSize="30sp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/tv11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:text="请在下面输入密保答案："
        android:layout_below="@+id/layout_forgetpwd_two_et_question"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/layout_forgetpwd_two_et_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/tv11"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="171dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:text="密保问题："
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/layout_forgetpwd_two_et_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:hint="密保问题"
        android:ems="10"
        android:layout_below="@+id/tv10"
        android:layout_alignParentStart="true">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/layout_forgetpwd_two_btn_ok"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="19dp"
        android:layout_marginTop="26dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:text="确认"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/layout_forgetpwd_two_et_answer"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
