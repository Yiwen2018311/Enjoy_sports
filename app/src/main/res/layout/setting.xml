<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Personalinfo.Setting"
    android:background="@color/gray9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_vertical_margin2">

        <!--        个人信息、收货地址-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin2">

            <Button
                android:id="@+id/iv_person_info"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/gray3"
                android:text="@string/setting_item1"
                android:textSize="20sp"
                android:textColor="@color/text_black"/>

            <Button
                android:id="@+id/setting_more"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/gray3"
                android:layout_marginTop="@dimen/activity_vertical_margin2"
                android:text="@string/setting_item3"
                android:textSize="20sp"
                android:textColor="@color/text_black"/>

            <Button
                android:id="@+id/setting_reback"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/gray3"
                android:layout_marginTop="@dimen/activity_vertical_margin2"
                android:text="返回主页"
                android:textSize="20sp"
                android:textColor="@color/text_black"/>

        </LinearLayout>

        <!--        退出登录-->
        <Button
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@color/white"
            android:textColor="@color/red0"
            android:text="@string/exit"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>